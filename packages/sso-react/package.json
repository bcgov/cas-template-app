{
  "name": "@bcgov-cas/sso-react",
  "description": "A suite of react components to handle session expiry warnings, in conjunction with @bcgov-cas/sso-express",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/cas-template-app",
    "directory": "packages/sso-react"
  },
  "main": "dist/ssoReact.js",
  "module": "dist/ssoReact.js",
  "types": "dist/ssoReact.d.ts",
  "license": "Apache-2.0",
  "private": false,
  "author": "ggircs@gov.bc.ca",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepack": "yarn test && yarn build"
  },
  "peerDependencies": {
    "react": "16 - 17",
    "react-dom": "16 - 17"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.10",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.0.2",
    "@types/react-dom": "^17.0.10",
    "babel-plugin-module-resolver": "^4.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "jest": "^27.3.1",
    "jest-extended": "^1.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "files": [
    "/dist"
  ],
  "dependencies": {
    "@button-inc/bcgov-theme": "^1.0.1",
    "lodash.throttle": "^4.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>test/setup-tests.ts"
    ],
    "transform": {
      ".*(ts|tsx|js|jsx)$": "ts-jest"
    }
  }
}
